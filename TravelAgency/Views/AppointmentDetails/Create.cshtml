@model TravelAgency.Models.AppointmentDetails

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>  اضافه تفصيل ميعاد جديد </h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AppointmentId" class="control-label">الميعاد</label>
                <select asp-for="AppointmentId" class="form-control" asp-items="ViewBag.AppointmentId"></select>
            </div>
            <div class="form-group">
                <label asp-for="BranchId" class="control-label">الفرع</label>
                <select asp-for="BranchId" class="form-control" asp-items="ViewBag.BranchId"></select>
            </div>
            <div class="form-group">
                <label asp-for="LeaveTime" class="control-label">وقت المغادره</label>
                <input asp-for="LeaveTime" class="form-control" />
                <span asp-validation-for="LeaveTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label">سعر التذكره</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="انشاء" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-info">العوده الى القائمه</a>
            </div>
        </form>
    </div>
</div>
 

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
