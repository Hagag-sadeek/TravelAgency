@model IEnumerable<TravelAgency.Models.AppointmentDetails>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>
    <a asp-action="Create" class="btn btn-success"> <span class="fa fa-plus"> تفاصيل ميعاد جديد </span></a>
</p>
<table class="table table-striped table-bordered table-hover" id="table">
    <thead>
        <tr>
            <th>
                الميعاد
            </th>
            <th>
                الفرع
            </th>
            <th>
                وقت المغادره
            </th>
            <th>
                السعر
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Appointment.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Branch.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LeaveTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.AppointmentDetailId" class="btn btn-primary">  <span class="fa fa-edit"></span></a>
                    <a asp-action="Details" asp-route-id="@item.AppointmentDetailId" class="btn btn-info">  <span class="fa fa-info"></span></a>
                    <a asp-action="Delete" asp-route-id="@item.AppointmentDetailId" class="btn btn-danger"><span class="fa fa-trash"></span></a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts
        {

    <script type="text/javascript">

        $(document).ready(function () {
            $('#table').DataTable(

            );
        });
    </script>

}