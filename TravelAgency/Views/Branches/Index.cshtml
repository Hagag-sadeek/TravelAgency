@model IEnumerable<TravelAgency.Models.Branches>

@{
    ViewData["Title"] = "قائمه الفروع";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

 

<p>
    <a asp-action="Create" class="btn btn-success"> <span class="fa fa-plus"> فرع جديد </span></a>
</p>
<table class="table table-striped table-bordered table-hover" id="table">
    <thead>
      <tr>
        <th> اسم الفرع </th>
        <th> اسم الشركه </th>
        <th> الوصف</th>
        <th> رقم الهاتف</th>
        <th> العنوان</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
      <tr>
        <td>
          @Html.DisplayFor(modelItem => item.Title)
        </td>
      

        <td>
          @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.Phone)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
          <a asp-action="Edit" asp-route-id="@item.BranchId" class="btn btn-primary">  <span class="fa fa-edit"></span></a>
          <a asp-action="Details" asp-route-id="@item.BranchId" class="btn btn-info">  <span class="fa fa-info"></span></a>
          <a asp-action="Delete" asp-route-id="@item.BranchId" class="btn btn-danger"><span class="fa fa-trash"></span></a>
        </td>
      </tr>
        }
    </tbody>
</table>

