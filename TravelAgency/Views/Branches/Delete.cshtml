@model TravelAgency.Models.Branches

@{
    ViewData["Title"] = "حذف الفرع";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

 

<span>هل بالفعل تريد حذف الفرع</span>
<div>
    
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            اسم الفرع
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            الوصف
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt class="col-sm-2">
            رقم الهاتف
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Phone)
        </dd>

        <dt class="col-sm-2">
            العنوان
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>

    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="BranchId" />
        <input type="submit" value="حذف" class="btn btn-danger" /> 
        <a asp-action="Index"  class="btn btn-info" >العوده الى القائمه</a>
    </form>
</div>
