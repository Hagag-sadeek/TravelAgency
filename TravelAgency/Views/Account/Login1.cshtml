  <script>
    window.fbAsyncInit = function () {
      FB.init({
        xfbml: true,
        version: 'v10.0'
      });
    };

    (function (d, s, id) {
      var js, fjs = d.getElementsByTagName(s)[0];
      if (d.getElementById(id)) return;
      js = d.createElement(s); js.id = id;
      js.src = 'https://connect.facebook.net/ar_AR/sdk/xfbml.customerchat.js';
      fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));
  </script>

  <!-- Your المكون الإضافي "دردشة" code -->
  <div class="fb-customerchat"
       attribution="page_inbox"
       page_id="109548650961984">
  </div>

  <!-- Your المكون الإضافي "دردشة" code -->
  <div class="fb-customerchat"
       attribution="page_inbox"
       page_id="109548650961984">
  </div>

  <div class="main-wrapper">

    <div class="preloader">
      <div class="lds-ripple">
        <div class="lds-pos"></div>
        <div class="lds-pos"></div>
      </div>
    </div>

    <div class="auth-wrapper d-flex no-block justify-content-center align-items-center" style="background:url(../../assets/images/big/auth-bg.jpg) no-repeat center center;">
      <div class="auth-box">
        <div id="loginform">
          <div class="logo">


            <img style="width: 200px;border-radius: 100px" src="~/assets/images/logo.jpg" />
          </div>
          <!-- Form -->
          <div class="row">
            <div class="col-12">
              <form class="form-horizontal mt-3" id="loginform" asp-action="Login" asp-controller="Account">
                <div class="input-group mb-3">
                  <div class="input-group-prepend">
                    <span class="input-group-text" id="basic-addon1"><i class="ti-user"></i></span>
                  </div>
                  <input type="text" class="form-control form-control-lg"
                         asp-for="UserName" aria-label="Username" aria-describedby="basic-addon1">

                </div>
                <span asp-validation-for="UserName" class="text text-danger"></span>
                <div class="input-group mb-3">
                  <div class="input-group-prepend">
                    <span class="input-group-text" id="basic-addon2"><i class="ti-pencil"></i></span>
                  </div>
                  <input type="password" class="form-control form-control-lg" asp-for="Password" aria-label="Password"
                         aria-describedby="basic-addon1">
                </div>
                <span asp-validation-for="Password" class="text text-danger"></span>
                <div class="form-group text-center">
                  <div class="col-xs-12 pb-3">
                    <button class="btn btn-block btn-lg btn-info" type="submit">تسجيل الدخول</button>
                    <p style="font-size: 20px; color:red"> نظام الحجز الاليكتروني لشركه فورباص </p>
                  </div>
                </div>


              </form>
            </div>
          </div>
        </div>

      </div>
    </div>

  </div>
  <!-- ============================================================== -->
