@model TravelAgency.Models.Users

@{
  ViewData["Title"] = "Create";
  Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>  اضافه مستخدم جديد </h3>
<hr />
<div class="row">
  <div class="col-md-4">
    <form asp-action="Create">
      <div asp-validation-summary="ModelOnly" class="text-danger"></div>
      <div class="form-group">
        <label asp-for="Firstname" class="control-label">اسم الموظف</label>
        <input asp-for="Firstname" class="form-control" />
        <span asp-validation-for="Firstname" class="text-danger"></span>
      </div>
      <div class="form-group">
        <label asp-for="UserName" class="control-label">اسم المستخدم</label>
        <input asp-for="UserName" class="form-control" />
        <span asp-validation-for="UserName" class="text-danger"></span>
      </div>
      <div class="form-group">
        <label asp-for="Password" class="control-label">كلمه المرور</label>
        <input asp-for="Password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
      </div>



      <div class="form-group">
        <label class="control-label">الفرع</label>
        <select asp-for="BranchId" class="form-control" asp-items="ViewBag.BranchId"></select>
      </div>
      <div class="form-group">
        <label class="control-label">المورد</label>
        <select asp-for="SupplierId" class="form-control" asp-items="ViewBag.SupplierId"></select>
      </div>

      <div class="form-group">
        <input type="submit" value="انشاء" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-info">العوده الى القائمه</a>
      </div>
    </form>
  </div>
</div>
 

@section Scripts {
  @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
