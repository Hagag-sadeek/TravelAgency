@model IEnumerable<TravelAgency.Models.Suppliers>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>
    <a asp-action="Create" class="btn btn-success"> <span class="fa fa-plus"> مورد جديد </span> </a>
</p>
<table class="table table-striped table-bordered table-hover" id="table">
    <thead>
      <tr>
        
        <th>
          الاسم بالكامل
        </th>
        <th>
          العموله
        </th>
        
        <th>
          العنوان
        </th>

        <th>
          الهاتف
        </th>
        

        <th style="width:120px;"></th>
      </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
      <tr> 
        <td>
          @Html.DisplayFor(modelItem => item.FullName)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.Commision)
        </td> 
        <td>
          @Html.DisplayFor(modelItem => item.Adreess1)
        </td>

        <td>
          @Html.DisplayFor(modelItem => item.Phone1)
        </td> 
        <td>
          <a asp-action="Edit" asp-route-id="@item.SupplierId" class="btn btn-primary"><span class="fa fa-edit"></span></a>
          <a asp-action="Details" asp-route-id="@item.SupplierId" class="btn btn-info"><span class="fa fa-info"></span></a>
          <a asp-action="Delete" asp-route-id="@item.SupplierId" class="btn btn-danger"><span class="fa fa-trash"></span></a>
        </td>
      </tr>
        }
    </tbody>
</table>


@section Scripts
        {

    <script type="text/javascript">

        $(document).ready(function () {
            $('#table').DataTable(

            );
        });
    </script>

}
